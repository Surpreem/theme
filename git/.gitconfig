# This is Git's per-user configuration file.
[diff]
    tool = bc
[merge]
    tool = bc
    conflictStyle = diff3
[difftool "bc"]
    path = C:/Program Files/Beyond Compare 4/bcomp.exe
[mergetool "bc"]
    path = C:/Program Files/Beyond Compare 4/bcomp.exe
[alias]
    lg = !"git lg0"
    lg0 = !"git lg0-specific --all"
    lg1 = !"git lg1-specific --all"
    lg2 = !"git lg2-specific --all"
    lg3 = !"git lg3-specific --all"

    lg0-specific = log --graph --oneline --decorate
    lg1-specific = log --graph --abbrev-commit --decorate --format=format:'%C(yellow)%h%C(reset) - %C(bold blue)(%ar)%C(reset) %C(auto)%s%C(reset) - %C(dim cyan)%an%C(reset)%C(auto)%d%C(reset)'
    lg2-specific = log --graph --abbrev-commit --decorate --format=format:'%C(yellow)%h%C(reset) - %C(bold cyan)%aD%C(reset) %C(bold blue)(%ar)%C(reset)%C(auto)%d%C(reset)%n''          %C(auto)%s%C(reset) %C(dim cyan)- %an%C(reset)'
    lg3-specific = log --graph --abbrev-commit --decorate --format=format:'%C(yellow)%h%C(reset) - %C(bold cyan)%aD%C(reset) %C(bold blue)(%ar)%C(reset) %C(bold cyan)(committed: %cD)%C(reset) %C(auto)%d%C(reset)%n''          %C(auto)%s%C(reset)%n''          %C(dim cyan)- %an <%ae> %C(reset) %C(dim white)(committer: %cn <%ce>)%C(reset)'

